{
  "version": 1,
  "canisters": {
    "study_platform_backend": {
      "type": "azle",
      "main": "backend",
      "custom": {
        "candid_gen": "automatic"
      }
    },
    "study_platform_frontend": {
      "type": "assets",
      "source": [
        "frontend/build"
      ],
      "build": "npm run build --prefix frontend"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "output_env_file": ".env",
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": [
        "https://ic0.app"
      ],
      "type": "persistent"
    }
  }
}